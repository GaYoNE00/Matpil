<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/navajowhite">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/gungseo"
        android:text="맛을 평가하다"
        android:textColor="@color/brown"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/readTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="  제목 부분"
        android:textSize="15dp"
        android:layout_marginTop="100dp"
        android:background="@color/navajowhite_1"
        />
    <TextView
        android:id="@+id/readMain"
        android:layout_alignTop="@id/readTitle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:inputType="text|textMultiLine"
        android:text="글 읽기 부분"
        android:gravity="top"
        android:layout_marginTop="100dp"
        android:background="@color/navajowhite_1"
        />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/brown"
        android:text="수정하기"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="200dp"
        android:backgroundTint="@color/brown"
        android:text="삭제하기"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_imgbill"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignBottom="@+id/btn_edit"
        android:layout_marginBottom="100dp"
        android:background="@color/brown"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/img_imgfood"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignLeft="@id/img_imgbill"
        android:layout_alignBottom="@+id/btn_edit"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="100dp"
        android:background="@color/brown"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/img_mainlogo"
        android:layout_width="50dp"
        android:src="@drawable/logo"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        />
</RelativeLayout>